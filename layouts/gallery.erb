<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<%= render 'head' %>

		<!-- GALLERIFFIC FILES -->
		<link rel="stylesheet" href="/galleriffic/galleriffic.css" type="text/css" />
		<link rel="stylesheet" href="/galleriffic/styles.css" type="text/css" />
		<link rel="stylesheet" href="/galleriffic/left-thumbs.css" type="text/css" />
		<script type="text/javascript" src="/galleriffic/jquery-1.3.2.js"></script>
		<script type="text/javascript" src="/galleriffic/jquery.opacityrollover.js"></script>
		<script type="text/javascript" src="/galleriffic/jquery.galleriffic.js"></script>
		<!-- We only want the thunbnails to display when javascript is disabled -->
		<script type="text/javascript">
			document.write('<style>.noscript { display: none; }</style>');
		</script>

			<!-- LE TORTE DI CHIARA -->
			<link rel="stylesheet" href="/styles/letortedichiara.css" type="text/css" />
			<link rel="stylesheet" href="/styles/gallery.css" type="text/css" />
			<style>
				li
				{ line-height:17px;}
			</style>
		</head>
		<body>

			<%= render 'logo' %>
						
			<%= render 'menu' %>

			
			<div class="contentBox" width="1024px">
				<div class="innerBox">
					<div class="contentTitle"><%= @item[:title] %></div>
					<div class="contentText">
						
					</div>
					
					<div class="content">
						
						<div class="navigation-container">
							<div id="thumbs" class="navigation">
								
								<ul class="thumbs noscript">

									<% num_imgs=count_imgs(@item[:gallery]) %>
									<% i=1 %>
									<% while i<=num_imgs do %>
										
										<li>
											
											<a 
												class="thumb" 
												href="/creazioni/<%= "#{@item[:gallery]}/#{@item[:gallery].to_s}_#{i}" %>.jpg" 
												title="<%= "#{@item[:title].to_s} (#{i})" %>">

												<img
												src="/creazioni/<%= "#{@item[:gallery]}/#{@item[:gallery].to_s}_#{i}_thumb" %>.jpg" 
												alt="<%= "#{@item[:title]} (#{i})" %>" 
												width="90" height="90" />
											
											</a>
											
										</li>
										
										<% i += 1 %>
									<% end %>
								
								</ul>
							
							</div>
						</div>
						
						
						<div class="slideshow-container">
							<div id="controls" class="controls"></div>
							<div id="loading" class="loader"></div>
							<div id="slideshow" class="slideshow"></div>
						</div>
					</div>
					
					<div class="gallery-gutter"></div>
					
					<div id="gutter"> </div>
				</div>
				<script type="text/javascript" src="/sources/gallery.js"> </script>
			</div>

			<%= render 'footer' %>

			<%= render 'analytics' %>

		 </body>
	 </html>
